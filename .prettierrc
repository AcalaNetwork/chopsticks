{
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 120,
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"printWidth": 70,
				"useTabs": false,
				"trailingComma": "none",
				"arrowParens": "avoid",
				"proseWrap": "never"
			}
		},
		{
			"files": "*.{json,babelrc,eslintrc,remarkrc,prettierrc}",
			"options": {
				"useTabs": false
			}
		}
	]
}
